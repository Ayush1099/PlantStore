@model Plants
@{
    ViewData["Title"] = "Add Plants";
}
<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="PlantId" class="control-label"></label>
                <input asp-for="PlantId" class="form-control" />
            </div>

            <div class="form-group">
                <label asp-for="PlantName" class="control-label"></label>
                <input asp-for="PlantName" class="form-control">
            </div>

            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
            </div>

            <div class="form-group">
                <label>QuantityAvailable</label>
                <input asp-for="QuantityAvailable" class="form-control" />
            </div>
            <br/>
            <div class="form-group">
                <button class="btn btn-primary">Create</button>
                <button class="btn btn-danger" asp-controller="Home" asp-action="Read">Back to List</button>
            </div>
        </form>
    </div>
</div>
